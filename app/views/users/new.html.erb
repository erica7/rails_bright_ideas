<div class="container-fluid">

  <div class="row text-center">
    <h1>Welcome to Bright Ideas!</h1>
    <h4><em>This site is in alpha stage of development. It is not an official release.</em></h4>
    <h4><em>Accordingly, please <u>do not enter any sensitive information</u> such as a legitimate e-mail address or passwords used elsewhere.</em></h4>
  </div>

  <div class="row">
    <div class="col-sm-4">
      <h2 class="heading">Register</h2>
    </div>
    <div class="col-sm-8">
      <form action="/users" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

        <div class="row">
          <div class="col-sm-2">
            <h4 class="heading">Name</h4>
          </div>
          <div class="col-sm-4">
            <input type="text" class="form-control" id="Name" name="register[name]">
          </div>
        </div>

        <div class="row">
          <div class="col-sm-2">
            <h4 class="heading">Alias</h4>
          </div>
          <div class="col-sm-4">
            <input type="text" class="form-control" id="Alias" name="register[alias]">
          </div>
        </div>

        <div class="row">
          <div class="col-sm-2">
            <h4 class="heading">Email</h4>
          </div>
          <div class="col-sm-4">
            <input type="text" class="form-control" id="Email" name="register[email]">
          </div>
        </div>

        <div class="row">
          <div class="col-sm-2">
            <h4 class="heading">Password</h4>
          </div>
          <div class="col-sm-4">
            <input type="password" class="form-control" id="Password" name="register[password]">
          </div>
        </div>

        <div class="row">
          <div class="col-sm-2">
            <h4 class="heading">Password Confirmation</h4>
          </div>
          <div class="col-sm-4">
            <input type="password" class="form-control" id="Password_Confirmation" name="register[password_confirmation]">
          </div>
        </div>

        <div class="row">
          <div class="col-sm-6 heading">
            <input class="btn" type="submit" name="Register" value="Register">
          </div>
        </div>
      </form>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4">
      <h2 class="heading">Login</h2>
    </div>
    <div class="col-sm-8">
      <form action="/sessions" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

        <div class="row">
          <div class="col-sm-2">
            <h4 class="heading">Email</h4>
          </div>
          <div class="col-sm-4">
            <input type="text" class="form-control" id="Email" name="login[email]">
          </div>
        </div>

        <div class="row">
          <div class="col-sm-2">
            <h4 class="heading">Password</h4>
          </div>
          <div class="col-sm-4">
            <input type="password" class="form-control" id="Password" name="login[password]">
          </div>
        </div>

        <div class="row">
          <div class="col-sm-6 heading">
            <input class="btn" type="submit" name="Log In" value="Log In">
          </div>
        </div>
      </form>
    </div>
  </div>

</div>
