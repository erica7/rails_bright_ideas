<div class="row">
  <h1 class="text-center">Welcome!</h1>
</div>
<div class="row">
  <div class="col-sm-2">
    <h2>Register</h2>
  </div>
  <div class="col-sm-10">
    <form action="/users" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <label>Name <input type="text" class="form-control" id="Name" name="register[name]"></label><br/>
      <label>Alias <input type="text" class="form-control" id="Name" name="register[alias]"></label><br/>
      <label>Email <input type="text" class="form-control" id="Email" name="register[email]"></label><br/>
      <label>Password <input type="text" class="form-control" id="Password" name="register[password]"></label><br/>  <!-- change type to "password" -->
      <label>Password Confirmation <input type="text" class="form-control" id="Password_Confirmation" name="register[password_confirmation]"></label><br/>  <!-- change type to "password" -->
      <input class="btn" type="submit" name="Register" value="Register">
    </form>
  </div>
</div>

<div class="row">
  <div class="col-sm-2">
    <h2>Login</h2>
  </div>
  <div class="col-sm-10">
    <form action="/sessions" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <label>Email <input type="text" class="form-control" id="Email" name="login[email]"></label><br/>
      <label>Password <input type="text" class="form-control" id="Password" name="login[password]"></label><br/>  <!-- change type to "password" -->
      <input class="btn" type="submit" name="Log In" value="Log In">
    </form>
  </div>
</div>
